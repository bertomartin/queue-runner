<div id="login-form">
  <%= simple_form_for(resource, :as => resource_name, 
        :url => session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <% if flash && flash[:alert] %>
        <div class="alert alert-error">
         <%= flash[:alert] %>
        </div>
      <% else %>
        <div class="alert alert-info">
          Welcome back, we missed you.
        </div>
      <% end %>

      <%= f.input :email, 
        :autofocus => true,
        :required => true,
        :placeholder => "Email",
        :label => false %>
      <%= f.input :password, 
        :required => true,
        :label => false, 
        :placeholder => "Password" %>
      <input type="hidden" name="user[remember_me]" value="1" checked="checked" />

      <%= f.button :submit, "Login", :class => "btn btn-primary btn-small", :id => "foo" %>

      <div class="account-links">
        <small>
          <%= link_to "Forgot?", new_password_path(resource_name), :class => "pull-left" %>
          <%= link_to "Sign up", new_registration_path(resource_name), :class => "pull-right" %>
        </small>
      </div>
    </div>
  <% end %>
</div>