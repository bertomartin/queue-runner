<div class="episode-row">
  <div class="row-fluid">
    <div class="span4">
      <h1><%= watch.episode.show.name %></h1>
    </div>
    <div class="span5">
      <h2><p><%= watch.episode.to_s %></p></h2>
    </div>
    <div class="span3">
      <div class="pull-right">
        <%= link_to toggle_text(watch), toggle_watched_path(watch.episode.id),
              :method => :post,
              :remote => true,
              :class => "btn btn-small btn-success btn-steel" %>
      </div>
    </div>
  </div>
</div>