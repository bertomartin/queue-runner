<div class="episode-row">
  <div class="row-fluid">
    <div class="span4">
      <h1><%= episode.show.name %></h1>
    </div>
    <div class="span5">
      <h2><p><%= episode.to_s %></p></h2>
    </div>
    <div class="span3">
      <div class="pull-right">
        <%= link_to "Mark as Watched", toggle_watched_path(episode.id),
            :method => :post,
            :remote => true,
            :class => "btn btn-small btn-success btn-steel" %>
      </div>
    </div>
  </div>
</div>