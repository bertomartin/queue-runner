Hi <%= current_user.try(:email) %>

<%= link_to "Add Show", new_show_path %>

<h1>Unwatched</h1>
<ul>
<% @unwatched.each do |w| %>
  <%= content_tag_for(:li, w) do %>
    <%= w.episode.to_s %>
    <%= link_to "Mark as Watched", user_watch_toggle_watched_path(w.id),
      :method => :post,
      :remote => true %>
  <% end %>
<% end %>
</ul>

<h1>Watched</h1>
<ul>
<% @watched.each do |w| %>
  <%= content_tag_for(:li, w) do %>
    <%= w.episode.to_s %>
    <%= link_to "Undo?", user_watch_toggle_watched_path(w.id),
      :method => :post,
      :remote => true %>
  <% end %>
<% end %>
</ul>

<h1>Tracking shows</h1>
<% @shows.each do |s| %>
  <%= s.name %>
<% end %>
