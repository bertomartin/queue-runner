<div class="show-table">
  <div class="row-fluid">
    <div class="span10">
      <h2><%= show.name %></h2>
    </div>
  </div>

  <div class="episode-list" id="ep-list-<%= show.id %>">
    <% show.episodes.each do |episode| %>
      <div class="row-fluid">
        <div class="span1">
          <h3><%= episode.production_number %></h3>
        </div>
        <div class="span5 offset1">
          <h3><%= episode.name %></h3>
        </div>
        <div class="span2">
          <h3><%= episode.airdate %></h3>
        </div>
        <div class="span3">
          <div class="pull-right">
            <%= link_to "Mark as Watched", user_watch_toggle_watched_path(episode.id),
                :method => :post,
                :remote => true,
                :class => "btn btn-small btn-success btn-steel" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>